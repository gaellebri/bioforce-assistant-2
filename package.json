{
  "name": "bioforce-assistant",
  "version": "0.5.0",
  "description": "Assistant pour l'Ã©quipe communication de Bioforce avec ChatGPT",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "test": "node tests/basic-test.js",
    "dev": "electron . --dev",
    "build": "electron-builder build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "GB",
  "license": "MIT",
  "devDependencies": {
    "@fiahfy/ico": "^0.0.5",
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3",
    "path": "^0.12.7",
    "png2icons": "^2.0.1"
  },
  "dependencies": {
    "crypto": "^1.0.1",
    "dotenv": "^16.4.7",
    "electron-log": "^5.3.2",
    "electron-store": "^10.0.1",
    "image-to-ico": "^1.0.1",
    "sharp": "^0.33.5"
  },
  "build": {
    "appId": "com.bioforce.assistant",
    "productName": "Bioforce Assistant",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icons/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "sign": false
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons/icon.png"
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "data/**/*",
      "package.json",
      ".env"
    ],
    "extraResources": [
  {
    "from": "./data",
    "to": "data",
    "filter": ["**/*"]
  },
  {
    "from": "./.env",
    "to": ".env"
  }
]
  }
}
